{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "declaration": true,
    "allowJs": true,
    "strict": false
  },
  "include": ["src/**/*"]
}
